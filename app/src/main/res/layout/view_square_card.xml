<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="0dp">
    <com.abplus.cardsquare.utils.views.SquareLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
                android:id="@+id/card_cover_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/cover_imagee"
                tools:src="@color/colorAccent"
                />
        <LinearLayout
                android:id="@+id/card_account_container"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                />
        <TextView
                style="@style/ShadowedText"
                android:id="@+id/card_introduction_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:gravity="end"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                tools:text="自己紹介欄\n複数行の説明を入力できる。"
                />
        <TextView
                style="@style/ShadowedText"
                android:id="@+id/card_description_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:gravity="end"
                app:layout_constraintBottom_toTopOf="@id/card_account_container"
                app:layout_constraintRight_toRightOf="parent"
                tools:text="下からせり上がるタイプの説明文\nこれも、複数行の説明を入力できる。"
                />
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">
            <TextView
                    style="@style/ShadowedNameText"
                    android:id="@+id/card_name_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    tools:text="氏名"
                    />
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    >
                <TextView
                        style="@style/ShadowedPhoneticText"
                        android:id="@+id/card_first_name_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="2pt"
                        android:layout_marginEnd="2pt"
                        android:gravity="center_horizontal"
                        tools:text="First"
                        />
                <TextView
                        style="@style/ShadowedPhoneticText"
                        android:id="@+id/card_family_name_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="2pt"
                        android:layout_marginEnd="2pt"
                        android:gravity="center_horizontal"
                        tools:text="Family"
                        />
            </LinearLayout>
        </LinearLayout>
    </com.abplus.cardsquare.utils.views.SquareLayout>
</androidx.cardview.widget.CardView>
