<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="NameText">
        <item name="android:textSize">9pt</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/textBlack</item>
    </style>

    <style name="PhoneticText">
        <item name="android:textSize">5pt</item>
        <item name="android:textColor">@color/textBlack</item>
    </style>

    <style name="ShadowedText">
        <item name="android:textSize">@dimen/fs_medium</item>
        <item name="android:shadowColor">#666</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="ShadowedNameText" parent="ShadowedText">
        <item name="android:textSize">@dimen/fs_large</item>
    </style>

    <style name="ShadowedPhoneticText" parent="ShadowedText">
        <item name="android:textSize">@dimen/fs_small</item>
    </style>

    <style name="LoginCaption">
        <item name="android:textSize">7pt</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/translucent</item>
    </style>

    <style name="ProgressDialog"
           parent="android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

</resources>
